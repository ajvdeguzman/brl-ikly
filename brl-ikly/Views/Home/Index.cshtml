@model brl_ikly.Models.Url

@{
    ViewBag.Title = "ikly - URL Shortener";
}

<div class="jumbotron" style="align-content:center;">
    <h1>ikly</h1>
    <p class="lead">Shorten your link, share in a blink.</p>
    <p>
        <table style="width:100%;">
            <tr>
                @using (Html.BeginForm("Shorten", "Home"))
                {
                    <td style="width:15%;">
                        @Html.Label("Original URL:", new { @class = "home-label" })
                    </td>
                    <td style="width:70%;">
                        @Html.TextBoxFor(model => model.UrlLongName, new { @class = "home-textfield" })
                        @* @Html.ValidationMessageFor(model => model.Email) *@
                    </td>
                    <td style="width:15%;">
                        <button type="submit" class="btn btn-default">Shorten</button>
                    </td>
                }
            </tr>
            <tr>
                <td>
                    @Html.Label("Shortened URL:", new { @class = "home-label" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.UrlShortName, new { @class = "home-textfield" }) @* TODO: how to set as read-only *@
                </td>
                <td>
                    &nbsp; @* TODO: button here for Copy *@
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Visitor count: ", new { @class = "home-label" })
                </td>
                <td colspan="2" class="home-label">
                    @Html.DisplayFor(model => model.UrlVisitCount)
                </td>
            </tr>
        </table>
    </p>
</div>